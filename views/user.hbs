{{>header}}
<div class="jumbotron container text-center">
    <div class="row">
        <div class="col-md-12">
           <h1 class="display-4">User Info</h1>
            <img src="{{image}}" alt="user photo" class="img-thumbnail img-fluid mt-2">
            <h4 class="mb-3 mt-3">Name</h4>
            <h5>{{name}}</h5>
            <h4 class="mb-3 mt-3">Registered from</h4>
            <p><i class="fa fa-{{social}}" aria-hidden="true"></i></p>
            <h4 class="mb-3 mt-3">Create on</h4>
            <h5>{{createdAt}}</h5>
            <a href="/user/remove" class="btn btn-info text-center btn-block mt-4 text-uppercase font-weight-bold"> Delete</a>
        </div>
        </div>
    </div>
{{>footer}}